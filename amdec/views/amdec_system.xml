<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_system_view_form" model="ir.ui.view">
        <field name="name">amdec_system_form</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Composante">
                            <group>
                                <field name="composante_ids" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_system_view_graph" model="ir.ui.view">
        <field name="name">amdec_system_graph</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <graph string="Amdec system">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_system_view_kanban" model="ir.ui.view">
        <field name="name">amdec_system_kanban</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_system_view_pivot" model="ir.ui.view">
        <field name="name">amdec_system_pivot</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <pivot string="Amdec system">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_system_view_search" model="ir.ui.view">
        <field name="name">amdec_system_search</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <search string="Amdec system">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
            </search>
        </field>
    </record>

    <record id="amdec_system_view_tree" model="ir.ui.view">
        <field name="name">amdec_system_tree</field>
        <field name="model">amdec.system</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="composante_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_system_system_action_window"
        name="System"
        res_model="amdec.system"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
