<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_line_view_form" model="ir.ui.view">
        <field name="name">amdec_line_form</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="amdec_id" />
                    </group>
                    <group>
                        <field name="failure_mode_id" />
                    </group>
                    <group>
                        <field name="historique_action_ids" />
                    </group>
                    <group>
                        <field name="is_seuil_superior" />
                    </group>
                    <group>
                        <field name="rate" />
                    </group>
                    <group>
                        <field name="system_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_line_view_graph" model="ir.ui.view">
        <field name="name">amdec_line_graph</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <graph string="Amdec line">
                <field name="name" type="row" />
                <field name="amdec_id" type="row" />
                <field name="failure_mode_id" type="row" />
                <field name="is_seuil_superior" type="row" />
                <field name="rate" type="measure" />
                <field name="system_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_line_view_kanban" model="ir.ui.view">
        <field name="name">amdec_line_kanban</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="amdec_id" />
                <field name="failure_mode_id" />
                <field name="historique_action_ids" />
                <field name="is_seuil_superior" />
                <field name="rate" />
                <field name="system_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="failure_mode_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="historique_action_ids" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.is_seuil_superior.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.is_seuil_superior.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="rate" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_line_view_pivot" model="ir.ui.view">
        <field name="name">amdec_line_pivot</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <pivot string="Amdec line">
                <field name="name" type="row" />
                <field name="amdec_id" type="row" />
                <field name="failure_mode_id" type="row" />
                <field name="is_seuil_superior" type="row" />
                <field name="rate" type="measure" />
                <field name="system_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_line_view_search" model="ir.ui.view">
        <field name="name">amdec_line_search</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <search string="Amdec line">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('amdec_id','!=',False)]" name="amdec_id" string="Amdec" />
                <filter domain="[('failure_mode_id','!=',False)]" name="failure_mode_id" string="Failure Mode" />
                <filter
                    domain="[('historique_action_ids','!=',False)]"
                    name="historique_action_ids"
                    string="Historique Action"
                />
                <filter domain="[('is_seuil_superior','=',True)]" name="is_seuil_superior" string="Is Seuil Superior" />
                <filter domain="[('rate','!=',False)]" name="rate" string="Rate" />
                <filter domain="[('system_id','!=',False)]" name="system_id" string="System" />
            </search>
        </field>
    </record>

    <record id="amdec_line_view_tree" model="ir.ui.view">
        <field name="name">amdec_line_tree</field>
        <field name="model">amdec.line</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_seuil_superior">
                <field name="name" />
                <field name="amdec_id" />
                <field name="failure_mode_id" />
                <field name="historique_action_ids" />
                <field name="is_seuil_superior" />
                <field name="rate" />
                <field name="system_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_line_line_action_window"
        name="Line"
        res_model="amdec.line"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
