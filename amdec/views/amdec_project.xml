<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_project_view_form" model="ir.ui.view">
        <field name="name">amdec_project_form</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="amdec_ids" />
                    </group>
                    <group>
                        <field name="general_amdec_seuil_rpn" />
                    </group>
                    <group>
                        <field name="grille_detectabilite_ids" />
                    </group>
                    <group>
                        <field name="grille_occurence_ids" />
                    </group>
                    <group>
                        <field name="grille_severite_ids" />
                    </group>
                    <group>
                        <field name="period_ids" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_project_view_graph" model="ir.ui.view">
        <field name="name">amdec_project_graph</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <graph string="Amdec project">
                <field name="name" type="row" />
                <field name="general_amdec_seuil_rpn" type="measure" />
            </graph>
        </field>
    </record>

    <record id="amdec_project_view_kanban" model="ir.ui.view">
        <field name="name">amdec_project_kanban</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="general_amdec_seuil_rpn" />
                <field name="grille_detectabilite_ids" />
                <field name="grille_occurence_ids" />
                <field name="grille_severite_ids" />
                <field name="period_ids" />
                <field name="amdec_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="general_amdec_seuil_rpn" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="grille_detectabilite_ids" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="grille_occurence_ids" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="grille_severite_ids" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="period_ids" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_ids" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_project_view_pivot" model="ir.ui.view">
        <field name="name">amdec_project_pivot</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <pivot string="Amdec project">
                <field name="name" type="row" />
                <field name="general_amdec_seuil_rpn" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="amdec_project_view_search" model="ir.ui.view">
        <field name="name">amdec_project_search</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <search string="Amdec project">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter
                    domain="[('general_amdec_seuil_rpn','!=',False)]"
                    name="general_amdec_seuil_rpn"
                    string="General Amdec Seuil Rpn"
                />
                <filter
                    domain="[('grille_detectabilite_ids','!=',False)]"
                    name="grille_detectabilite_ids"
                    string="Grilles d&#233;tectabilite"
                />
                <filter
                    domain="[('grille_occurence_ids','!=',False)]"
                    name="grille_occurence_ids"
                    string="Grilles occurence"
                />
                <filter
                    domain="[('grille_severite_ids','!=',False)]"
                    name="grille_severite_ids"
                    string="Grilles S&#233;v&#233;rit&#233;"
                />
                <filter domain="[('period_ids','!=',False)]" name="period_ids" string="P&#233;riodes" />
                <filter domain="[('amdec_ids','!=',False)]" name="amdec_ids" string="AMDEC" />
            </search>
        </field>
    </record>

    <record id="amdec_project_view_tree" model="ir.ui.view">
        <field name="name">amdec_project_tree</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="amdec_ids" />
                <field name="general_amdec_seuil_rpn" />
                <field name="grille_detectabilite_ids" />
                <field name="grille_occurence_ids" />
                <field name="grille_severite_ids" />
                <field name="period_ids" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_project_project_action_window"
        name="Project"
        res_model="amdec.project"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
