<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_type_panne_view_form" model="ir.ui.view">
        <field name="name">amdec_type_panne_form</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_type_panne_view_graph" model="ir.ui.view">
        <field name="name">amdec_type_panne_graph</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <graph string="Amdec type panne">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_type_panne_view_kanban" model="ir.ui.view">
        <field name="name">amdec_type_panne_kanban</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_type_panne_view_pivot" model="ir.ui.view">
        <field name="name">amdec_type_panne_pivot</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <pivot string="Amdec type panne">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_type_panne_view_search" model="ir.ui.view">
        <field name="name">amdec_type_panne_search</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <search string="Amdec type panne">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
            </search>
        </field>
    </record>

    <record id="amdec_type_panne_view_tree" model="ir.ui.view">
        <field name="name">amdec_type_panne_tree</field>
        <field name="model">amdec.type_panne</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_type_panne_type_panne_action_window"
        name="Type panne"
        res_model="amdec.type_panne"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
