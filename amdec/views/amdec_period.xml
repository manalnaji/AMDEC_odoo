<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_period_view_form" model="ir.ui.view">
        <field name="name">amdec_period_form</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="date_debut" />
                    </group>
                    <group>
                        <field name="date_fin" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_period_view_graph" model="ir.ui.view">
        <field name="name">amdec_period_graph</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <graph string="Amdec period">
                <field name="name" type="row" />
                <field name="date_debut" type="row" />
                <field name="date_fin" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_period_view_kanban" model="ir.ui.view">
        <field name="name">amdec_period_kanban</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="date_debut" />
                <field name="date_fin" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_debut" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_fin" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_period_view_pivot" model="ir.ui.view">
        <field name="name">amdec_period_pivot</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <pivot string="Amdec period">
                <field name="name" type="row" />
                <field name="date_debut" type="row" />
                <field name="date_fin" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_period_view_search" model="ir.ui.view">
        <field name="name">amdec_period_search</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <search string="Amdec period">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('date_debut','!=',False)]" name="date_debut" string="Date Debut" />
                <filter domain="[('date_fin','!=',False)]" name="date_fin" string="Date Fin" />
            </search>
        </field>
    </record>

    <record id="amdec_period_view_tree" model="ir.ui.view">
        <field name="name">amdec_period_tree</field>
        <field name="model">amdec.period</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_debut" />
                <field name="date_fin" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_period_period_action_window"
        name="Period"
        res_model="amdec.period"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
